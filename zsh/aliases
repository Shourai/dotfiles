##############################
# Aliases
##############################

# Eza
if command -v eza &>/dev/null
then
  alias ls='eza --icons=auto'
  alias l='eza --long --binary --git --icons=auto'
  alias ll='eza --long --binary --grid --git --icons=auto'
  alias llm='eza --long --binary --grid --git --sort=modified'
  alias la='eza --long --binary --header --group --accessed --created --time-style=long-iso --git --icons=auto'
  alias lS='eza -1'
  alias lt='eza --tree --level=2'
fi

# bat
if command -v bat &>/dev/null
then
  alias cat='bat --paging=never'
fi

# cd
alias ..='cd ../'
alias ...='cd ../..'
alias ....='cd ../../..'
alias cd..='cd ../'
alias /='cd /'
alias ~='cd ~'
alias cp='cp -iv'
alias mkdir='mkdir -pv'
alias vi='\vim'
alias vim='nvim'
alias zshrc='vim ~/.zshrc'
alias tx='tmuxinator'

# Wireguard
alias wgup='wg-quick up'
alias wgdown='wg-quick down'

## Git
alias g='git'
alias lg='lazygit'
