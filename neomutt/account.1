# imap settings
set imap_user=mail@domain.com
set imap_pass=password
set folder="imaps://mail@domain.com@imaps_domain.com:993"
set spoolfile= +Inbox
set postponed= +Drafts
set record= +Sent
set trash= +Deleted

# smtp settings
set realname = "Foo"
set from = "mail@domain.com"
set smtp_url= "smtp://mail@domain.com@smtp_domain.com:587"
set ssl_starttls = yes
set smtp_pass=password

# Mailboxes settings
unmailboxes *
named-mailboxes "mail@domain.com" "=mail"
named-mailboxes " Inbox" "=Inbox"
named-mailboxes " Sent" "=Sent"
named-mailboxes " Archive" "=Archive"
named-mailboxes " Drafts" "=Drafts"
named-mailboxes " Deleted" "=Deleted"
