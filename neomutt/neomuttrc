# Source work and personal account
folder-hook 'personal' 'source ~/.config/neomutt/personal'
folder-hook 'work' 'source ~/.config/neomutt/work'

# default account
source personal

# Activate caching, as it can greatly improve speed
set header_cache = "~/.config/neomutt/cache/headers"
set message_cachedir = "~/.config/neomutt/cache/bodies"
set header_cache_backend = lmdb

# Sidebar mappings
set sidebar_visible = yes
set sidebar_width = 20
set sidebar_short_path = yes
set sidebar_next_new_wrap = yes
set mail_check_stats
set sidebar_format = '%B%?F? [%F]?%* %?N?%N/? %?S?%S?'

# General settings
set date_format="%F %T"
#set index_format="%4C %Z %?X?A& ? %D %-15.15L %s (%-4.4c)"
set index_format = "%4C %Z %D %-15.15L (%?l?%4l&%4c?) %s"
set sort = 'reverse-date'
set wait_key = no
set copy = no  # Turned off because gmail already saves a copy of sent emails
set move = no
set beep = no
set sleep_time = 0

# Force SSL
set ssl_starttls = yes
set ssl_force_tls = yes

# charset
set charset	= "utf-8"
set assumed_charset = "utf-8"
set send_charset = "utf-8"

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

# Set neomutt colorscheme
source dracula.muttrc

# Keybindings
bind index G imap-fetch-mail
bind index,pager \CP sidebar-prev                 # Ctrl-p to select next folder
bind index,pager \CN sidebar-next                 # Ctrl-n to select previous folder
bind index,pager \CI sidebar-open                 # Ctrl-i to open selected folder
bind index,pager \CB sidebar-toggle-visible       # Ctrl-b to toggle visibility of the sidebar

bind pager g  noop
bind pager gg  top
bind pager G   bottom
bind pager k   previous-line
bind pager j next-line

bind index g noop
macro index gt1 '<sync-mailbox><enter-command>source ~/.config/neomutt/personal<enter><change-folder>!<enter>'
macro index gt2 '<sync-mailbox><enter-command>source ~/.config/neomutt/work<enter><change-folder>!<enter>'
